<p id="notice"><%= notice %></p>

<h1>Chatrooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chatrooms.each do |chatroom| %>
      <tr>
        <% if chatroom.chatroom_users.where(user_id: current_user.try(:id)).any? %>
          <td><%= link_to chatroom.name, chatroom %></td>
          <td><%= link_to "Leave", chatroom_chatroom_users_path(chatroom), method: :delete  %></td>
        <% else %>
          <td><%= chatroom.name %></td>
          <td><%= link_to "Join", chatroom_chatroom_users_path(chatroom), method: :post %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chatroom', new_chatroom_path %>
